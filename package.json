{
    "name": "js-aca",
    "version": "1.0.0",
    "description": "This repo is used for JS practicing",
    "license": "MIT",
    "author": "David Gevorgyan <davidggevorgyan@gmail.com>",
    "homepage": "https://github.com/davidggevorgyan/js-aca",
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.2",
        "jest": "^25.2.7"
    },
    "scripts": {
        "test": "jest --verbose"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "node": true,
            "es6": true,
            "jest": true
        },
        "rules": {
            "indent": [
                "error",
                "tab"
            ],
            "no-plusplus": [
                "error",
                {
                    "allowForLoopAfterthoughts": true
                }
            ],
            "no-tabs": [
                "error",
                {
                    "allowIndentationTabs": true
                }
            ],
            "padded-blocks": [
                "error",
                {
                    "classes": "always"
                }
            ],
            "space-in-parens": [
                "error",
                "always"
            ],
            "template-curly-spacing": [
                "error",
                "always"
            ]
        }
    }
}
