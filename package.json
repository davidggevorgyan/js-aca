{
    "name": "js-aca",
    "version": "1.0.0",
    "description": "This repo is used for JS practicing",
    "license": "MIT",
    "author": "David Gevorgyan <davidggevorgyan@gmail.com>",
    "homepage": "https://github.com/davidggevorgyan/js-aca",
    "devDependencies": {
        "eslint": "^7.16.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "jest": "^27.2.0"
    },
    "scripts": {
        "test": "jest --verbose"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "node": true,
            "es6": true,
            "jest": true,
            "browser": true
        },
        "parser": "babel-eslint",
        "rules": {
            "indent": [
                "error",
                "tab"
            ],
            "import/extensions": [
                "error",
                "ignorePackages"
            ],
            "no-plusplus": [
                "error",
                {
                    "allowForLoopAfterthoughts": true
                }
            ],
            "no-tabs": [
                "error",
                {
                    "allowIndentationTabs": true
                }
            ],
            "padded-blocks": [
                "error",
                {
                    "classes": "always"
                }
            ],
            "space-in-parens": [
                "error",
                "always"
            ],
            "template-curly-spacing": [
                "error",
                "always"
            ],
            "no-underscore-dangle": [
                "error",
                {
                    "allowAfterThis": true
                }
            ]
        }
    },
    "dependencies": {
        "babel-eslint": "^10.1.0"
    }
}
